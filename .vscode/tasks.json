{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug -S . -B build",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build -j",
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": ["CMake Configure"]
        },
        {
            "label": "debuglabel",
            "type": "shell",
            "command": "echo 'Build and Deploy Complete'",
            // 最终目标任务依赖于部署任务，按顺序执行
            "dependsOn": [
                "Deploy Binaries"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
	]
}