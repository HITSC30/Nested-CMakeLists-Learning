//gdb+gcc
{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug -S . -B build",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build -j",
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": ["CMake Configure"]
        },
        {
            "label": "debuglabel",
            "type": "shell",
            "command": "echo 'Build and Deploy Complete'",
            // ğŸš€ æ ¸å¿ƒä¿®æ”¹ï¼šè®©å®ƒä¾èµ–äºç¼–è¯‘ä»»åŠ¡ï¼
            "dependsOn": [
                "CMake Build"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
	]
}
